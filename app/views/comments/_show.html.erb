<% count = 0 %>
<% r.comments.order("created_at desc").each do |c| %>
	<% if count < 4 %>
		<div class="comment " data-id="<%= c.id %>">
	<% else %>
		<div class="comment comment-hidden animated fadeInDown" data-id="<%= c.id %>">
	<% end %>
		<div class="comment-rating pull-left">
			<%= render "comments/rating", :c => c %>
		</div>
		<div class="comment-info">
			<text class="comment-user"><%= User.find(c.user_id).email %></text>
			<text class="comment-time"><%= c.generate_time() %></text>
		</div>
		<div class="comment-body"><%= c.body %></div>
	</div>
	<% count += 1 %>
<% end %>