<%= form_for(@user, :url => registration_path(@user)) do |f| %>

	<div class="homepage-form-header">
		<h4>Register</h4>
	</div>
	</br>

  <%= f.email_field :email, :autofocus => true, :required => true, :placeholder => 'Email address', :id => "signup-email-field" %>
	</br>
	</br>
	<%= f.password_field :password, :required => true, :placeholder => 'Password' %>
	</br>
	</br>
  <%= f.password_field :password_confirmation, :required => true, :placeholder => 'Confirmation' %>
	</br>
	</br>
  <%= f.submit "Submit", :class=>"btn btn-primary" %>
<% end %>