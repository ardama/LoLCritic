<h3>Sign up</h3>

<%= form_for(@user, :url => registration_path(@user)) do |f| %>

  <div class="input-prepend">
  	<span class="add-on"><i class="icon-envelope"></i></span>
  	<%= f.email_field :email, :autofocus => true, :required => true, :placeholder => 'Email address' %></div>

  <div><%= f.label :password %>
 		<%= f.password_field :password, :required => true %></div>

  <div><%= f.label :password_confirmation %>
 		<%= f.password_field :password_confirmation, :required => true %></div>

  <div><%= f.submit "Sign up", :class=>"btn btn-primary" %></div>
<% end %>