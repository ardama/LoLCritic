<div class="row-fluid">
	<div class="span8 offset2">
	    <div class="signin-header">
	      <h4 class="header">Sign in</h4>
	    </div>
	    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
	      <%= devise_error_messages! %>
	      <div class="field control-group">
	        <%= f.label :email, :class => "control-label" %>
	        <div class="controls">
	          <%= f.text_field :email, :autofocus => true, :style => "width:400px", :required => true %>
	        </div>
	      </div>

	      <div class="field control-group">
	        <%= f.label :password, :class => "control-label" %>
	        <div class="controls">
	          <%= f.password_field :password, :style => "width:400px", :required => true %>
	        </div>
	      </div>

	      <div class="remember-me pull-left">
   			<%= f.check_box :remember_me, :class => "pull-left" %>
  			<%= f.label :remember_me, :class => "pull-left" %>
   		  </div></br></br>

	      <div class="field control-group">
	        <div class="controls">
	          <%= link_to 'Back', root_url, :class => "btn btn-large btn-secondary" %>
	          <%= f.submit "Sign up", :class => "btn btn-primary btn-large" %>
	        </div>
	      </div>


	    <% end %>
	    <div class="devise-links">
	    	<%= render "devise/shared/links" %>
	    </div>
	</div>
</div>